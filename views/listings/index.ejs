<% layout("/layouts/boilerplate") %>
<body>
    <h1 class="text-center my-4" >All Listings</h1>

    <div class="d-flex flex-wrap justify-content-center gap-4 px-4">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" style="display: block; text-decoration: none; color: inherit;">
            <div class="card shadow" style="width: 18rem;">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
                <div class="card-body">
                    <h5 class="card-title"><%= listing.title %></h5>
                    <p class="card-text">â‚¹ <%= listing.price.toLocaleString("en-IN") %> /night</p>
                    <a href="/listings/<%= listing._id %>" class="btn btn-primary">View</a>
                </div>
            </div>
            </a>
        <% } %>
    </div>
</body>
